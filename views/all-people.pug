doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title User Databse | StackCode
  body
    table
      thead
        tr
          th(scope='col') First Name
          th(scope='col') Last Name
          th(scope='col') UserName
      tbody
        each question in all
            tr
                td= question.firstName
                td= question.lastName
                td= question.username
  a(href='/') Go Back Home 
  a(href=`/users/${user.id}/${user.firstName}`) Go To Profile

