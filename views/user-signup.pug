extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/users/signup' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Username', 'username', user.username)
    +field('First Name', 'firstName', user.firstName)
    +field('Last Name', 'lastName', user.lastName)
    +field('Email Address', 'email', user.email)
    +field('Password', 'password', user.password, 'password')
    +field('Confirm Password', 'confirmPassword', '', 'password', class='confirm-password')
    div(class='py-4')
      button(type='submit') Sign Up
      a(href='/') Cancel
    div
    p: a(href='/users/signup') Already have an account?