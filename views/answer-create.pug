extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/answer/create' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Content', 'content', answer.body)
    div(class='py-4')
      button(type='submit' class='btn btn-primary') Submit Answer
      a(type = 'button' href='/' class='btn btn-warning ml-2') Cancel
