extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/answers/create' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('QuestionId', 'questionId', answer.questionId)
    +field('Answer', 'body', answer.body)
    div(class='py-4')
      button(type='submit' class='btn btn-primary') Submit Answer
      a(href='/questions' class='btn btn-warning ml-2') Cancel
